
<div class="container body-subscription">

    <div class="container subscription-container">
<div class="header-edit">
  <h1>Rejoindre un salon</h1>
</div>
      <h2><%= @chat_room.title %></h2>
      <%= simple_form_for [@chat_room, :my, @subscription] do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="chat_room_description">
            <p><%= @chat_room.description %></p>
          </div>
          <br>
          <%= f.input :description,
                      as: :text,
                      label: false,
                      placeholder: "Expliquez Ã  #{@chat_room.user.username} pourquoi vous souhaitez rejoindre son salon de discussion",
                      class: "message-area" %>
        </div>

        <div class="send-button">
          <%= f.button :submit, "Envoyer une demande",
          class: "subscription-button seven-button" %>
          <%= link_to "Retour", :back, class: "seven-button" %>
        </div>
      <% end %>
    </div>
  </div>

