<h1>Créer une chat room</h1>

<%= simple_form_for [:my, @chat_room] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "Titre" %>
    <%= f.input :description, label: "ajoutez une description", placeholder: "Quelles sont les règles a suivre dans votre chat room ? Quels en sont les critères d'entrée ?"  %>
  </div>

  <%#= f.association :tags, as: :check_boxes %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= simple_form_for :search, url: search_path, method: :get do |f| %>
        <%= f.input :tag_ids, collection: Tag.all, input_html: { multiple: true, class: "select2" }, include_hidden: false %>
        <%= f.submit "Ajoutez un ou plusieurs tags", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

  <div class="form-actions">
    <%= f.button :submit, "Créer" %>
  </div>
<% end %>

<%= link_to "Retour", :back %>

