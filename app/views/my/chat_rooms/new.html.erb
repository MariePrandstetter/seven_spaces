
<div class="subscription-container">
<div class="header-edit">
  <h1>Créer un salon</h1>
</div>
  <div class="container">
    <%= simple_form_for [:my, @chat_room] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <h4> <%= f.input :title, label: "Titre" %> </h4>
        <h4> <%= f.input :description, label: "Ajoutez une description", placeholder: "Quelles sont les règles a suivre dans votre chat room ? Quels en sont les critères d'entrée ?"  %> </h4>
        <br>
        <%= f.input :photo, as: :file, label: "Ajoutez une image" %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

    <br>

    <div class="tag-container mt-3">
      <div class="tag-item mt-3">
        <div id="Ajoutez des tags"><p>Utilisez des tags pour définir la thématique de votre salon</p></div>
      </div>
       <span class="btn-add-tags seven-button btn btn-dark">+ Ajouter un tag</span>
     </div>



    <div class="d-flex justify-content-center">
      <div class="form-actions">
        <%= f.button :submit, "Sauvegarder", class: 'seven-button' %>
         <% end %>
        <%= link_to "Retour", :back, class: "seven-button" %>
      </div>
    </div>
</div>



